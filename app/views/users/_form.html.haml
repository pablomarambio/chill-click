= form_for @user, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :picture, :class => 'control-label'
    .controls
      = f.text_field :picture, :class => 'text_field'
  .control-group
    = f.label :cellphone, :class => 'control-label'
    .controls
      = f.number_field :cellphone, :class => 'number_field'
  .control-group
    = f.label :mail, :class => 'control-label'
    .controls
      = f.text_field :mail, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), users_path, :class => 'btn'
